# ═══════════════════════════════════════════════════════════════════════════
# NPM Configuration
# ═══════════════════════════════════════════════════════════════════════════

# Use exact versions (no ^ or ~) for predictable builds
save-exact=true

# Automatically install peer dependencies
legacy-peer-deps=false

# Fail on peer dependency conflicts (stricter)
strict-peer-deps=false

# Use package-lock.json
package-lock=true

# Engine compatibility checks
engine-strict=true

# Prefer offline packages when available (faster installs)
prefer-offline=true

# Progress bar off for CI environments
# progress=false

# Registry (default npm registry)
registry=https://registry.npmjs.org/

# ═══════════════════════════════════════════════════════════════════════════
# Security
# ═══════════════════════════════════════════════════════════════════════════

# Run npm audit on install
audit=true

# Audit level threshold
audit-level=moderate

